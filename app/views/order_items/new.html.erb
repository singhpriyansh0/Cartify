<div class="main">
	
	<h1>Order Summary</h1>
	<table>
		<tr>
			<th>Name</th>
			<th>Variant</th>
			<th>Quantity</th>
			<th>Price</th>
		</tr>

		<%total_amount=0%>
		    <% @cart_items.each do |e|%>
			
			<% product=e.variant.product%>
			<% variant= e.variant%>
			<tr>
				<td><%= product.name%></td>
				<td>colour: <%= variant.colour%><br>material: <%= variant.material%> <br>weight: <%=variant.weight%></td>
				<td><%=e.quantity%></td>
				<td><%=variant.price%></td>
			
			</tr>
			<%total_amount=total_amount + (e.quantity * variant.price)%>
			<%end%>
	</table>

	<h2>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp   Order amount: <%=total_amount%></h2>

		<%=form_with url:"/order_items" , model:@user do |form|%>
			<h3 align="center"><%= form.submit "Proceed for payment"%></h3>
		<%end%>

</div>

<style type="text/css">
	.main{
		
		margin: 100px 20px 20px 20px;
		
		font-size: 16px;
		border-radius: 50px;
		padding: 20px  100px 100px 100px;
	}

</style>