<div class="ant">
	<div class="main">
		<h1>My Orders </h1>
		<div class="content">
			<table>
				
				<tr class="heading">
					
					<th><h2 align="center">Order_id</h2></th>
					<th><h2 align="center">Status </h2></th>
					<th><h2 align="center">Details </h2></th>
				
				</tr>
				
				<% @orders.each do |e|%>
				<%order_item= OrderItem.find_by(order_id: e.id)%>
				<tr>
					<td><h3><%=e.id%></h3></td>
					<td><h3><%=e.status%></h3></td>
					<td><h3 class="link"><%=link_to "link" , order_item%></h3></td>
					
				</tr>
				<%end%>
				
			</table>
		</div>
	</div>
</div>
