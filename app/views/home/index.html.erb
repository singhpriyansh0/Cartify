<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class = "background">       
  <div class="topnav" id="myTopnav">
   <b> <%= image_tag "carts.png" ,size: "36x33"%> </b> 
   <a class="active"><%= link_to "Home" , root_path%></a>
    
    <div class="dropdown">
     <a class="dropbtn">Category</a>
     <div class="dropdown-content">
      <%@category.each do |e|%>
      <a href="#"><%= e.name %>
        
      </a>
      
      <%end%>
     </div>
    </div>


    <a href="#contact">My Orders</a>
    <a href="#about">About</a>
    <a href="" style=" margin-left: auto;" >hello <%=current_user[:first_name]%></a>
    <div class="cart">
      <a href=""><i class="fa fa-shopping-cart"><span class="ribbon"><%= CartItem.count%></span></i></a>
    </div>
  </div>
</div>

<h2 class="heading">Beauty, Food, Toys & more</h2>


<div class="product">
  <div class="grid">
    <%@products.each do |product|%>
    <div class="card">
      <div class="container">
        <h3><b><%=name(product)%></b></h3>
        <h5><b><%=brand_name(product)%></b></h5>        
        <%=image_tag  display(product) , size: "250x250" ,:style => "object-fit: contain"%>
        <p><b>for Rs.<%= price_p(product) %></b></p>
      </div>
    </div>
    <%end%>
  </div>
</div>
<>

<style type="text/css">
        
        .heading {          margin-top: 100px;      
        }
        .grid {
                            display: inline-flex;
                            flex-wrap: wrap;
                            justify-content: space-around;
                            align-items: center;
                            flex-direction: row;
        }
        .card {
                       /* Add shadows to create the "card" effect */
                        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                        margin: 30px;
                        transition: 0.3s;
        }

                        /* On mouse-over, add a deeper shadow */
        .card:hover {
                        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }         
        .container p{      color: red;
                            font-size: 14px;

        }
                       /* Add some padding inside the card container */
        .container {
                        padding: 2px 16px;
        }        
        .topnav {
                        background-color: blue;
                        overflow: hidden;
                        display: flex;
                        position: fixed;
                        top: 0;
                        width: 100%;
        }
        .topnav a {     
                        margin-top: 10px;
                        float: left;
                        display: block;
                        color: white;
                        text-align: center;
                        padding: 5px 15px;
                        text-decoration: none;
                        font-size: 20px;
        }
        .topnav b {     
                        margin-top: 10px;
                        float: left;
                        display: block;
                        color: white;
                        text-align: center;
                        padding: 5px 15px;
                        text-decoration: none;
                        font-size: 20px;
                      }
        .topnav i {     margin-right: 25px;
                        margin-top: 4px;
                        font-size: 25px;              
        }
        .topnav a:hover {
                        background-color: white;
                        color: black;
                        border-radius: 15px;
                        }
        .ribbon {
                        width: 22px;
                        font-size: 12px;
                        padding: 3px;
                        position: absolute;
                        right: 25px;
                        top: 6px;
                        text-align: center;
                        border-radius: 25px;
                        transform: rotate(20deg);
                        background-color: #ff9800;
                        color: white;
                }
        .dropbtn {    

                        font-size: 10px;
                        border: none;
        }
        /* Dropdown Content (Hidden by Default) */
        .dropdown-content {
                        margin-top: 45px;

                        display: none;
                        position: absolute;

                        background-color: blue;
                        min-width: 120px;
                        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
                        z-index: 1;
                        border-radius: 15px;

        }

        /* Links inside the dropdown */
        .dropdown-content a {
                        color: white;
                        padding: 8px 10px;
                        text-decoration: none;
                        display: block;
                        font-size: 15px;
        }

        /* Change color of dropdown links on hover */
        .dropdown-content a:hover {background-color: white;}

        /* Show the dropdown menu on hover */
        .dropdown:hover .dropdown-content {display: block;}

        /* Change the background color of the dropdown button when the dropdown content is shown */
        .dropdown:hover .dropbtn {background-color: #white;}
</style>

